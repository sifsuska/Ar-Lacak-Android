<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView android:layout_height="match_parent"
	xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
	android:background="@drawable/gradient_bg"
	>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_root1"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

	>
	<LinearLayout 
	    android:id="@+id/home_root2"
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
		<FrameLayout 
		    android:layout_width="fill_parent"
			android:layout_height="fill_parent">
			<LinearLayout 
			    android:id="@+id/home_root3"
			    android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_weight="1"
			    >
			    <LinearLayout 
			    	android:id="@+id/main_layout_menu"
			        android:orientation="vertical"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_weight="3"
			        android:padding="2dip"
			        >

			        <LinearLayout 
			            android:orientation="horizontal"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_weight="1"
			           	android:persistentDrawingCache="animation|scrolling"
						android:layoutAnimation="@anim/main_animation_controller"
			            >

			            <ImageButton
			                android:id="@+id/btn_MainMenu01"

			                android:layout_width="wrap_content"
							android:layout_height="match_parent"
			                android:text="KANTOR POLISI"
			                android:textColor="@color/white_textcolor"
			                android:textColorLink="@color/white_textcolor" />

			            <ImageButton
			                android:id="@+id/btn_MainMenu02"
			                android:layout_width="wrap_content"
							android:layout_height="match_parent"
			                android:text="LAPOR KECELAKAAN"
			                android:textColor="@color/white_textcolor"
			                android:textColorLink="@color/white_textcolor" />


			        </LinearLayout>

			        <LinearLayout
			            android:orientation="horizontal"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_weight="1"
			            android:persistentDrawingCache="animation|scrolling"
						android:layoutAnimation="@anim/main_animation_controller"
			            >

			            <ImageButton

							android:layout_gravity="center_vertical"
							android:gravity="center_horizontal"
			                android:id="@+id/btn_MainMenu03"
			                android:layout_height="wrap_content"
							android:layout_width="wrap_content"
			                android:text="BERITA TERBARU"
			                android:textColor="@color/white_textcolor"
			                android:textColorLink="@color/white_textcolor" />


						<Button
							android:id="@+id/btn_MainMenu04"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Login"/>


			        </LinearLayout>
			        
			        <LinearLayout  
					    android:orientation="horizontal" 
					    android:layout_width="fill_parent" 
					    android:layout_height="wrap_content"
					    android:layout_gravity="bottom">
					</LinearLayout>
			    </LinearLayout>
			</LinearLayout>
		</FrameLayout>
	</LinearLayout>
</LinearLayout>

	</HorizontalScrollView>